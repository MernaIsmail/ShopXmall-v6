<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7d3971</item>
        <item name="colorPrimaryDark">#5F2d56</item>
        <item name="colorAccent">#7d3971</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#7d3971</item>
        <item name="colorPrimaryDark">#5F2d56</item>
        <item name="colorAccent">#7d3971</item>
        <!--<item name="android:windowBackground">@drawable/bg</item>-->
        <!--<item name="colorAccent">#FFFFFF</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textColorLink">#ff398622</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#5F2d56</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintText">
        <item name="android:textSize">0dp</item>
    </style>

</resources>
